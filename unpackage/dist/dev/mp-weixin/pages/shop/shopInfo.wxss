.container {
  padding: 20rpx;
  padding-top: 0;
}
.tip-card-box {
  margin-top: 30rpx;
}
.public-card {
  border-radius: 15rpx;
  margin-top: 0;
  border-top-left-radius: 0;
  padding: 25rpx 20rpx;
}
.tip-card-tip {
  width: 170rpx;
  padding: 15rpx 25rpx;
  box-sizing: content-box;
  font-size: 28rpx;
  text-align: center;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}
.card-text {
  width: 100%;
}
.card-text label {
  font-size: 28rpx;
}
.card-text view {
  margin-top: 20rpx;
  font-size: 26rpx;
}
.tip-card-box.coupon .public-card {
  padding: 30rpx 20rpx;
}
.tip-card-box.coupon .card-text .coupon-item {
  margin-top: 0rpx;
}
.tip-card-box.coupon .public-card .card-text {
  margin-left: 0;
}
.card-icon,
.card-icon-box {
  width: 100%;
}
.card-icon {
  padding-bottom: 40rpx;
}
.card-icon-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding-bottom: 40rpx;
}
.card-icon-btn {
  padding: 15rpx 40rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
}
.card-show-img .public-card {
  display: block;
  padding: 0;
}
.card-show-img .public-card image {
  width: 100%;
}

