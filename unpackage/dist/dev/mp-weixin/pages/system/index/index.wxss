.tui-searchbox {
	width: 100%;
	height: 92rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
	background-color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	position: fixed;
	left: 0;
	top: 0;



	z-index: 100;
}
.tui-searchbox::after {
	content: '';
	position: absolute;
	border-bottom: 1rpx solid #d2d2d2;
	-webkit-transform: scaleY(0.5);
	transform: scaleY(0.5);
	bottom: 0;
	right: 0;
	left: 0;
}
.tui-search-input {
	width: 100%;
	height: 60rpx;
	background: #f1f1f1;
	border-radius: 30rpx;
	font-size: 26rpx;
	color: #999;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.tui-search-text {
	padding-left: 16rpx;
}
.tab-view {
	/* height: 100%; */
	width: 140rpx;
	position: fixed;
	left: 0;
	z-index: 10;
	background: #FFFFFF;
}
.tab-bar-item {
	width: 100%;
	height: 90rpx;
	background: transparent;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	font-size: 26rpx;
	color: #444;
	font-weight: 400;
	margin-top: 20rpx;
}
.active {
	position: relative;
	color: #FFFFFF;
	font-size: 30rpx;
	font-weight: 600;
	background: #4E77FF;
}
.active::before {
