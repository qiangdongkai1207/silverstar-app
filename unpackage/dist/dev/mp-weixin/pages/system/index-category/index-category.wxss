.container {
  background-color: transparent;
  width: 100%;
}
.container-box {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  padding-top: 0;
  box-sizing: border-box;
}
.public-card {
  width: auto;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0px 1px 5px #EBECF0;
  background: #FFFFFF;
  box-sizing: border-box;
}
.public-card {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 30rpx;
}
.card-img {
  width: 300rpx;
  height: 200rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.card-img image {
  width: 100%;
  height: 100%;
}
.card-text {
  margin-left: 40rpx;
  font-size: 20rpx;
  width: 440rpx;
  color: #727281;
}
.card-text view {
  margin-top: 15rpx;
}
.card-text .top {
  margin-top: 0rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.card-tip-top {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 40rpx;
  font-size: 18rpx;
  display: -webkit-box;
  display: -webkit-flex;
